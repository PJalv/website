package components

import "strings"

templ Header(post Post) {
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<!-- Open Graph Protocol tags -->
		<meta property="og:title" content={ post.RawTitle }/>
		<meta property="og:description" content={ post.Description }/>
		<meta property="og:site_name" content="PJalv"/>
		<meta property="og:type" content="article"/>
		<meta property="og:image" content="https://pjalv.com/file/headshot_embed.jpg"/>
		<meta name="twitter:card" content="summary"/>
		<meta name="twitter:title" content={ post.RawTitle }/>
		<meta name="twitter:description" content={ post.Description }/>
		<meta name="twitter:image" content="https://pjalv.com/file/headshot_embed.jpg"/>
		<link rel="icon" type="image/x-icon" href="/favicon.ico"/>
		<script type="text/javascript">
        (function(c,l,a,r,i,t,y){
            c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
            t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
            y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
        })(window, document, "clarity", "script", "pgzrhkd2yv");
    </script>
		<script src="https://unpkg.com/htmx.org@1.8.5/dist/htmx.min.js"></script>
		<script src="https://unpkg.com/htmx.org/dist/ext/json-enc.js"></script>
		<title>{ post.RawTitle + " | PJalv" }</title>
		<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        color: #c0caf5;
        background-color: #1a1b26;
    }
    
    @media (max-width: 600px) {
        body { width: 100%; }
    }
    
    /* Layout Components */
    .container {
        max-width: 800px;
        margin: 30px auto;
        padding: 20px;
        background: #24283b;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
    }
    
    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 800px;
        margin: 20px auto;
        padding: 0 20px;
        background: #24283b;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        flex-direction: row;
    }
    
    /* Typography */
    h1 { text-align: center; color: #7aa2f7; }
    h2 { color: #bb9af7; }
    h3 { color: #7dcfff; }
    h4 { color: #4fd6be; margin-bottom: -7.72px; }
    sup { margin-left: 0.35em; }
    
    /* Links */
    a {
        color: #7aa2f7;
        text-decoration: none;
    }
    a:hover { text-decoration: underline; }
    nav a { color: rgb(90, 217, 194); }
    
    /* Lists */
    .container li, .landing li {
        padding: 5px 0;
        list-style-type: none;
    }
    nav ul {
        list-style-type: none;
        padding: 0;
        display: flex;
    }
    nav li {
        margin-right: 20px;
    }
    nav li:last-child {
        margin-right: 0;
    }
    .post-content ul {
        list-style-type: disc;
    }
    #blog-container ul {
        list-style-type: none;
        padding-left: 0;
    }
    
    /* Blog Components */
    .blog-post {
        max-width: 100%;
    }
    .blog-post p {
        line-height: 1.35;
    }
    .blog-post h1 {
        font-size: 1.85em;
    }
    .blog-post a {
        color: rgb(90, 217, 194);
    }
    p.blog-date {
        color: #ff9e64;
    }
    
    /* Images and Media */
    .img-border {
        display: flex;
        width: 12em;
        height: 12em;
        border-radius: 50%;
        margin: 10px;
    }
    .img-border img {
        display: block;
        aspect-ratio: 1;
    }
    .blog-post img, .blog-post iframe, .landing iframe {
        max-width: 100%;
        max-height: 30em;
    }
    video {
        max-width: 95%;
        display: block;
        margin: auto;
        max-height: 32em;
    }
    
    /* Profile Section */
    .profile-images {
        display: flex;
        justify-content: center;
    }
    .intro {
        display: flex;
        align-items: center;
        margin: 20px auto;
    }
    .intro-text {
        font-size: 1.1em;
        line-height: 1.5em;
    }
    
    /* Modal */
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.9);
    }
    .modal-content {
        margin: 5% auto;
        display: block;
        width: 100%;
        max-width: 900px;
    }
    .close {
        position: absolute;
        top: 10px;
        right: 25px;
        color: #fff;
        font-size: 35px;
        font-weight: bold;
        cursor: pointer;
    }
    .modal img {
        display: flex;
        justify-content: center;
        margin-top: 10%;
        width: 100%;
    }
    
    /* Buttons */
    button {
        border: none;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }
    .date-button {
        display: flex;
        justify-content: flex-end;
        margin: -1.5em 0 14px;
    }
    .date-button button {
        background-color: #ff9e64;
        color: black;
    }
    .copy-button {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 5px;
        font-size: 0.9em;
    }
    .copy-button:hover {
        background-color: #45a049;
    }
    
    /* Code Blocks */
    pre::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }
    pre::-webkit-scrollbar-thumb {
        background: #3b4261;
        border-radius: 8px;
    }
    pre::-webkit-scrollbar-thumb:hover {
        background: #5e6687;
    }
    pre::-webkit-scrollbar-track {
        background: #24283b;
        border-radius: 8px;
    }
    p code, li code {
        background: #1e1c1c;
        border-radius: 3px;
        color: #4fd6be;
        font-size: 1.15em;
    }
    
    /* Blog Post Meta */
    .post-meta {
        display: flex;
        align-items: center;
    }
    .post-date {
        margin-left: auto;
        color: #bb9af7;
        text-decoration: none;
    }
    .post-date:hover, .description:hover {
        text-decoration: none;
    }
    .description {
        margin-top: 5px;
        font-size: 0.85em;
        font-style: italic;
        color: white;
        text-decoration: none;
    }
    .blog-post figcaption {
        font-size: 0.85em;
        color: #bb9af7;
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }
    
    /* Scrolling Text */
    .scrolling-text-container {
        max-width: 400px;
        overflow: hidden;
        white-space: nowrap;
    }
    .scrolling-text {
        display: inline-block;
        animation: scrollText 13s linear infinite;
    }
    .scrolling-text:hover {
        animation-play-state: running;
    }
    .scrolling-text-container:hover .scrolling-text {
        animation-play-state: paused;
    }
    @keyframes scrollText {
        from { transform: translateX(100%); }
        to { transform: translateX(-100%); }
    }
    </style>
		<script src="https://pjalv.com/file/prism.js"></script>
		<link href="https://pjalv.com/file/prism.css" rel="stylesheet"/><script>
    document.addEventListener('DOMContentLoaded', (event) => {
      document.querySelectorAll('pre code').forEach((block) => {
        hljs.highlightElement(block);
      });
    });
  </script>
	</head>
}

